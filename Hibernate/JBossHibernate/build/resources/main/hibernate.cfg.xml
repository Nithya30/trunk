<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.username">HR_EMP</property>
        <property name="hibernate.connection.password">HR_EMP</property>
        <property name="hibernate.default_schema">HR_EMP</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="jrout.tutorial.hibernate.model.Employees" />
        <mapping class="jrout.tutorial.hibernate.model.EmpDetailsView" />
        <mapping class="jrout.tutorial.hibernate.model.Locations" />
        <mapping class="jrout.tutorial.hibernate.model.Countries" />
        <mapping class="jrout.tutorial.hibernate.model.JobHistory" />
        <mapping class="jrout.tutorial.hibernate.model.Departments" />
        <mapping class="jrout.tutorial.hibernate.model.Jobs" />
        <mapping class="jrout.tutorial.hibernate.model.Regions" />
        <mapping class="jrout.tutorial.hibernate.model.Customer" />
    </session-factory>
</hibernate-configuration>
